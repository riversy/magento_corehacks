<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">

    <PRODUCT_TYPE_bundle>
        <reference name="product.info.bundle.options">
            <action method="addRenderer">
                <type>select</type>
                <block>corehacks/catalog_product_view_type_bundle_option_select</block>
            </action>
            <action method="addRenderer">
                <type>multi</type>
                <block>corehacks/catalog_product_view_type_bundle_option_multi</block>
            </action>
            <action method="addRenderer">
                <type>radio</type>
                <block>corehacks/catalog_product_view_type_bundle_option_radio</block>
            </action>
            <action method="addRenderer">
                <type>checkbox</type>
                <block>corehacks/catalog_product_view_type_bundle_option_checkbox</block>
            </action>
        </reference>
    </PRODUCT_TYPE_bundle>

    <catalog_category_layered>
        <reference name="category.products">
            <block type="corehacks/catalog_category_description" as="hacks.description" name="hacks.description"/>
        </reference>
    </catalog_category_layered>

    <catalog_category_default>
        <reference name="category.products">
            <block type="corehacks/catalog_category_description" as="hacks.description" name="hacks.description"/>
        </reference>
    </catalog_category_default>

</layout>
